<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.codev01.app.rebootmanager" >

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.Light.Dialog">
        <activity
			android:name=".RebootManager"
            android:label="@string/app_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
			android:label="@string/app_about"
			android:name="ru.codev01.app.about.AboutActivity">
			<intent-filter>
				<action android:name="android.intent.action.APPLICATION_PREFERENCES" />
				<category android:name="com.cyanogenmod.category.LAUNCHER_PREFERENCES" />
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
    </application>

</manifest>
